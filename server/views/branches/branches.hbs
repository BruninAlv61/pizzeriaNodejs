{{#contentFor "styles"}}
  <link rel="stylesheet" href="/css/manage-table.css">
{{/contentFor}}

<main class="main">
  <h1>Branches</h1>
  <a class="main-addBtn" href="/branches/add">Add Branch +</a>

  {{#if branches.length}}
    <div class="main-list">
      {{#each branches}}
        
          <h4 class="main-list-item">
            {{province}} - {{locality}}
          </h4>
          <div class="main-list-btns main-list-item">
            <a href="/branches/edit/{{branch_id}}">
              <img src="/assets/pen.png" alt="edit icon">
            </a>
            <button onclick="deleteBranch('{{branch_id}}')">
              <img src="/assets/bin.png" alt="delete icon">
            </button>
          </div>
       
      {{/each}}
    </div>
  {{else}}
    <div>
      <h4>No branches added</h4>
    </div>
  {{/if}}
</main>

<script>
  async function deleteBranch(id) {
    const confirmDelete = confirm("Are you sure you want to delete this branch?");
    if (confirmDelete) {
      await fetch(`/branches/${id}`, { method: 'DELETE' });
      location.reload(); // Refresh after deletion
    }
  }
</script>
