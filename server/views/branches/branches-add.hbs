{{#contentFor 'styles'}}
  <link rel='stylesheet' href='/css/branches-add.css' />
{{/contentFor}}

<main class='branchesMain'>
  <h1 class='branchesMain-title'>Branches</h1>
  <form class='branchesMain-form' action='/branches' method='post'>
    <label for='branchName'>Branch Name</label>
    <input
      type='text'
      id='branchName'
      name='branchName'
      autocomplete='off'
      placeholder='Branch Name'
    />
    <label for='address'>Address</label>
    <input
      type='text'
      id='address'
      name='address'
      autocomplete='off'
      placeholder='Branch Address'
    />
    <label for='phone'>Phone</label>
    <input
      type='text'
      id='phone'
      name='phone'
      autocomplete='off'
      placeholder='Branch Phone'
    />
    <label for='schedule'>Schedule</label>
    <input
      type='text'
      id='schedule'
      name='schedule'
      autocomplete='off'
      placeholder='Branch Schedule'
    />
    <button type='submit'>Save</button>
  </form>
</main>
