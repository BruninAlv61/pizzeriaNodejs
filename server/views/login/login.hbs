{{#contentFor "styles"}}
  <link rel="stylesheet" href="/css/login.css" />
{{/contentFor}}

<main class="loginMain">
  <h1 class="loginMain-tittle">Login</h1>

  <form class="loginMain-form" action="/login" method="POST">
    <label for="">Usuario</label>
    <input type="text" placeholder="Nombre del usuario" autocomplete="off" name="username" id="username" />
    <label for="">Contraseña</label>
    <input type="password" placeholder="Contraseña" autocomplete="off" name="password" id="password" />
    <button type="submit">Ingresar</button>
    <a href="/register">Crear una cuenta</a>
  </form>
</main>