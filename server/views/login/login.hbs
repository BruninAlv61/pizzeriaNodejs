{{#contentFor "styles"}}
  <link rel="stylesheet" href="/css/login.css" />
{{/contentFor}}

<main class="loginMain">
  <h1 class="loginMain-tittle">Login</h1>

  <form class="loginMain-form" action="/login" method="POST">
    <label for="username">Username</label>
    <input type="text" placeholder="Enter your username" autocomplete="off" name="username" id="username" />
    <label for="password">Password</label>
    <input type="password" placeholder="Enter your password" autocomplete="off" name="password" id="password" />
    <button type="submit">Sign In</button>
    <a href="/register">Create an account</a>
  </form>
</main>
