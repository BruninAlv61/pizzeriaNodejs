{{#contentFor "styles"}}
  <link rel="stylesheet" href="/css/categories-add.css" />
{{/contentFor}}

<main class="categoriesMain">
  <h1 class="categoriesMain-title">Categories</h1>
  <form class="categoriesMain-form" action="/categories" method="post">
    <label for="categoryName">Name</label>
    <input
      type="text"
      id="categoryName"
      name="categoryName"
      autocomplete="off"
      placeholder="Category name"
    />
    <label for="categoryCover">Cover</label>
    <input type="text" id="categoryCover" name="categoryCover" autocomplete="off" placeholder="Cover URL"/>
    <button type="submit">Save</button>
  </form>
</main>
